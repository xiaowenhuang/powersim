<h1>修改</h1>

<% form_for(@pharmacy) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :药店名 %><br />
    <%= f.text_field :title %>
  </p>
  <p>
  	<%= f.label :原因 %><br/>
	<%= f.text_area :reason%>
  </p>
  <p>
  	<%= f.label :受理日期 %><br/>
	<%= f.text_field :begin_date %>
  </p>
  <p>
  	<%= f.label :完成日期 %><br/>
	<%= f.text_field :end_date %>
  </p>	
  <p>
    <%= f.label :受理人 %><br />
    <%= f.text_field :operator %>
  </p>
  <p>
    <%= f.label :联系电话 %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :地址 %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.submit '更新' %>
  </p>
<% end %>

<%= link_to '展示', @pharmacy %> |
