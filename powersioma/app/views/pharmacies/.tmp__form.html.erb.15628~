<%= form_for(@pharmacy) do |f| %>
  <% if @pharmacy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pharmacy.errors.count, "error") %> prohibited this pharmacy from being saved:</h2>

      <ul>
      <% @pharmacy.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :药店名 %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :原因 %><br />
    <%= f.text_area :reason ,:rows=>6 %>
  </div>
  <div class="field">
    <%= f.label :受理日期 %><br />
    <%= f.text_field :begin_date %>
  </div>
  <div class="field">
    <%= f.label :终结日期 %><br />
    <%= f.text_field :end_date %>
  </div>
  <div class="field">
    <%= f.label :联系电话或QQ %><br />
    <%= f.text_field :phone %>
  </div>
  
  
  
  <div class="field">
    <%= f.label :地址 %><br />
    <%= f.text_field :address %>
  </div>
  <div class="actions">
    <%= f.submit :添加 %>
  </div>
<% end %>
