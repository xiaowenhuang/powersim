<h1>Listing pharmacies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Reason</th>
    <th>Begin date</th>
    <th>End date</th>
    <th>Phone</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pharmacies.each do |pharmacy| %>
  <tr>
    <td><%= pharmacy.name %></td>
    <td><%= pharmacy.reason %></td>
    <td><%= pharmacy.begin_date %></td>
    <td><%= pharmacy.end_date %></td>
    <td><%= pharmacy.phone %></td>
    <td><%= pharmacy.address %></td>
    <td><%= link_to 'Show', pharmacy %></td>
    <td><%= link_to 'Edit', edit_pharmacy_path(pharmacy) %></td>
    <td><%= link_to 'Destroy', pharmacy, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

